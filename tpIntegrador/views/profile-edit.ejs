<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	<!-- Header -->

	<%- include('./partials/headerLogueado') %>

	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<form action="/registrar" method="GET">
				<label for="email"> Nuevo Email:</label><br>
				<input type="email" id="email" name="email" required><br><br>

				<label for="usuario">Nuevo Usuario:</label><br>
				<input type="text" id="usuario" name="usuario" required><br><br>

				<label for="contraseña"> Nueva Contraseña:</label><br>
				<input type="password" id="contraseña" name="contraseña" required><br><br>

				<label for="fecha_nacimiento">Fecha de Nacimiento:</label><br>
				<input type="date" id="fecha_nacimiento" name="fecha_nacimiento" required><br><br>

				<label for="nro_documento">Número de Documento:</label><br>
				<input type="number" id="nro_documento" name="nro_documento" required><br><br>

				<label for="foto_perfil">Nueva Foto de Perfil (URL):</label><br>
				<input type="text" id="foto_perfil" name="foto_perfil"><br><br>

				<input type="submit" value="Registrarse">
			</form>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>