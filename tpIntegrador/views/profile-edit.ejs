<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
  <!-- Header -->
  <% if (locals.user != undefined) { %>
    <%- include('./partials/headerLogueado') %>
  <% } else { %>
    <%- include('./partials/header') %>
  <% } %>
  <!-- /Header -->

  <!-- Editar Perfil -->
  <section class="info-usuario container products-wrapper">
    <div class="row">
      <div class="col-12">
        <h2 class="profile-edit">Editar Perfil</h2>
      </div>

      <div class="img-container offset-3 col-2">
        <img src="<%= perfil.fotoPerfil %>" alt="foto de perfil" class="foto-perfil">
      </div>
      <div class="data-container col-6">
        <form action="/users/update" method="POST">
          <input type="hidden" name="id" value="<%= perfil.id %>">
          <div class="form-group"><br>
            <label for="nombre">Nombre</label>
            <input type="text" id="nombre" name="nombre" value="<%= perfil.nombre %>" class="form-control">
          </div> <br>
          <div class="form-group">
            <label for="mail">Email</label>
            <input type="email" id="mail" name="mail" value="<%= perfil.mail %>" class="form-control">
          </div><br>
          <div class="form-group">
            <label for="contra">Contrase√±a</label>
            <input type="password" id="contra" name="contra" class="form-control">
          </div><br>
          <button type="submit" class="cambioButton">Guardar Cambios</button>
        </form>
      </div>
    </div>
  </section>
  <!-- /Editar Perfil -->

  <!-- footer -->
  <%- include('./partials/footer') %>
  <!-- /footer -->
</body>
</html>
