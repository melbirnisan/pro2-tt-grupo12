<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	<!-- Header -->
	
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/header') %>
	<% } %>
	<!-- /Header -->


	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar producto</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<form action="/product/add" method="GET">
				<label for="imagen">Imagen:</label><br>
			   <input type="file" id="imagen" name="imagen" required><br><br>
		
		
				<label for="usuario">Nombre del producto:</label><br>
				<input type="text" id="nombre" name="nombre" required><br><br>
		
		
				<label for="descripcion">Descripción del producto:</label><br>
				<textarea id="descripcion" name="descripcion" rows =”4” required> </textarea><br><br> 
				<input type="submit" value="Agregar Producto"> <br><br>
			</form>



	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>