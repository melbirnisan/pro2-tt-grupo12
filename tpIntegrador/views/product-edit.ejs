<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
  <!-- Header -->
  <% if (locals.user != undefined) { %>
    <%- include('./partials/headerLogueado') %>
  <% } else { %>
    <%- include('./partials/header') %>
  <% } %>
  <!-- /Header -->

  <!-- Editar Perfil -->
  <div class="container products-wrapper">
    <div class="row">
      <div class="col-12">
        <h2 class="products-title">Editar Producto</h2>
      </div>

      <form  action="/product/edit" method="POST">
        <input type="hidden" name="id" value="<%= productos.id %>">
        <input type="hidden" name="idUsuario" value="<%= productos.usuario.id %>">

        <label for="nombreProducto">Nombre del producto</label><br>
        <input type="text" id="nombreProducto" name="nombreProducto"
          value="<%= (locals.old && locals.old.nombreProducto !== undefined) ? locals.old.nombreProducto : (productos && productos.nombreProducto) %>"><br>
        <% if (locals.errors && errors.nombreProducto) { %>
          <p class="feedback">
            <%= errors.nombreProducto.msg %>
          </p>
          <% } %>

            <label for="fotoProducto">Imagen</label><br>
            <input  type="text" id="imagen"
              name="fotoProducto"
              value="<%= (locals.old && locals.old.fotoProducto !== undefined) ? locals.old.fotoProducto : (productos && productos.fotoProducto) %>"><br>
            <% if (locals.errors && errors.fotoProducto) { %>
              <p class="feedback">
                <%= errors.fotoProducto.msg %>
              </p>
              <% } %>

                <label class="form-label"
                  for="descripcion">Descripci√≥n</label><br>
                <textarea  id="descripcion" name="descripcion"
                  rows="4"><%= (locals.old && locals.old.descripcion !== undefined) ? locals.old.descripcion : (productos && productos.descripcion) %></textarea><br>
                <% if (locals.errors && errors.descripcion) { %>
                  <p class="feedback">
                    <%= errors.descripcion.msg %>
                  </p>
                  <% } %>

                <button type="submit" class="">Aceptar Cambios</button>
      </form>
    </div>
  </div>

  <!-- /Editar Perfil -->

  <!-- footer -->
  <%- include('./partials/footer') %>
  <!-- /footer -->

</body>
</html>