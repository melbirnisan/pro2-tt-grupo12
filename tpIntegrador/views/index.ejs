<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/header') %>
	<% } %>
	
	<!-- /Header -->
	
	<!-- Banner -->

	<!-- /Banner -->
	<div class="banner">
		<img src="/images/banner-final.jpg" alt="Banner de ofertas">
	</div>
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i <4; i++) {%>
				<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/id/<%= productos[i].id%>">
						<figure class="product-box_image">
							<img src="<%=productos[i].fotoProducto%>" alt="disco">						</figure>
						<article class="product-box_data">
							<h2><%= productos[i].nombreProducto%></h2> 
							<p><%= productos[i].descripcion%></p>
							<p>Comentarios: 0 </p>
						</article>
					</a>
				</section>
			</div>
		<%}%>
		</div>
	</div>
	<!-- /Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 4; i <8; i++) {%>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/id/<%= productos[i].id%>">
						<figure class="product-box_image">
							<img src="<%=productos[i].fotoProducto%>" alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2><%= productos[i].nombreProducto%></h2> 
							<p><%= productos[i].descripcion%></p>
							<p>Comentarios: 0 </p>
						</article>
					</a>
				</section>
			</div>
			<%}%>
		</div>
	</div>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>