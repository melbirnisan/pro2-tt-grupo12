<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->
	
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"> <%= productos[1].nombre%></h2> 
			<p class="product-detail-description">
				<a class ="editar" href="/product/add">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%=productos[1].imagen%>" alt="" class="product-detail-img">
					<p class="product-detail-description"> <%= productos[1].descripcion%></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for (let i = 0; i <5; i++) {%>
						<article>
							<img src="<%=productos[1].comentarios[i].imagenPerfil%>" alt="">
							<div class="data">
								<p class="user">
								<strong> <a href="/users/profile"><%=productos[1].comentarios[i].persona %>: </a> </strong>
								 <%= productos[1].comentarios[i].texto%></p>
							</div>
						</article>
						<%}%>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
<%- include('./partials/footer') %>
	<!-- /footer -->

</body>	
</html>